<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>WebCampBackendNew</title>
	<link rel="stylesheet" href="app/assets/stylesheets/edit.css">
</head>

<body>
	<!-- 投稿編集機能 -->

	<%= form_for(@book) do |f| %>

		<h2>Editing Book</h2>

		<% if @book.errors.any? %>
			<% @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		<% end %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<p class="submit">
		<%= f.submit 'Update Book' %>
		</p>
	<% end %>

	<%= link_to 'Show', book_path(@book.id) %>
	<%= link_to 'Back', '/books' %>


</body>

</html>